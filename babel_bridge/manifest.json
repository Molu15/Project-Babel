{
    "manifest_version": 3,
    "name": "Babel Bridge",
    "version": "1.0",
    "description": "Connects browser context to Project Babel desktop app.",
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "*://*.figma.com/*",
        "*://*.adobe.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "128": "icon.png"
    },
    "action": {
        "default_icon": "icon.png"
    }
}